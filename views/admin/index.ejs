<div class="container mt-5">
    <a type="button" class="btn btn-primary btn-lg" href="/user/register">Register New user</a>

    <%- include('../part/message') %>
        <h1>List User</h1>
        <table class="table table-hover">
            <tr>
                <th>User Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            <% users.map(user=>{%>
                <tr>
                    <td>
                        <%= user.name %>
                    </td>
                    <td>
                        <%= user.email %>
                    </td>

                    <td>
                        <%= user.password %>
                    </td>
                    <td><a href="/" class="btn btn-warning">Edit</a></td>
                    <td>
                        <%- include('../part/deleteForm',{url:`/user/${user._id}?_method=delete`}) %>
                    </td>
                </tr>
                <%}) %>

        </table>
</div>
<div class="container">
    <a type="button" class="btn btn-primary btn-lg" href="/product/add">Add New Product</a>
    <h1>List Products</h1>
    <table class="table table-hover">
        <tr>
            <th>Product Name</th>
            <th>Information</th>
            <th>Color</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Category</th>

            <th>Edit</th>
            <th>Delete</th>
        </tr>
        <% products.map(pro=>{%>
            <tr>
                <td>
                    <%= pro.name %>
                </td>
                <td>
                    <%= pro.info %>
                </td>
                <td>
                    <%= pro.color %>
                </td>
                <td>
                    <%= pro.price %>
                </td>
                <td>
                    <%= pro.quantity %>
                </td>
                <td><img src="<%=  pro.imageSrc %>" alt="" width="50px"></td>

                <td>
                    <% if(pro.category){%>
                        <%= pro.category.name %>
                            <%} %>
                </td>
                <td><a href="/product/edit/<%= pro._id %>" class="btn btn-warning">Edit</a></td>
                <td>
                    <%- include('../part/deleteForm',{url:`/product/delete/${pro._id}`}) %>
                </td>
            </tr>
            <%}) %>

    </table>
</div>